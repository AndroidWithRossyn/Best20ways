<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/native_ads"
        android:background="@drawable/background"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:gravity="start"
                android:letterSpacing=".1"
                android:text="20 WAYS TO EARN MONEY"
                android:textColor="#30A6A6"
                android:textSize="12dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/best20ways"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/best20ways" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/inder"
                android:letterSpacing=".005"
                android:layout_marginRight="60dp"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:text="@string/first_page"
                android:textColor="@color/gray"
                android:textSize="16dp" />
            <ImageView
                android:id="@+id/get_started"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/get_started" />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/native_ads"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    </LinearLayout>



</RelativeLayout>